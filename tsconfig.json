{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "allowJs": true,
        "baseUrl": "src",
        "jsx": "react",
        "paths": {
            "~shared/*": [ "shared/*" ],
            "~server/*": [ "server/*" ],
            "~client/*": [ "client/*" ]
        },
        "outDir": "/dev/null"
    }
}
